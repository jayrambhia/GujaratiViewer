<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffebeff1"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="false"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_header"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="left"
            android:text="@string/app_name_gujarati"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/toolbar"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/toolbar"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:textColor="@color/primary_text_color"
                android:text="@string/intro_string_gujarati"
                android:id="@+id/textview_info"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/box_textview"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@id/textview_info"
                android:gravity="center_horizontal"
                android:background="@drawable/border_drawable"
                android:text="@string/demo_gujarati_string"
                android:textIsSelectable="true"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textSize="16sp"
                android:layout_below="@id/box_textview"
                android:layout_margin="18dp"
                android:gravity="center_horizontal"
                android:textColor="@color/primary_text_color"
                android:text="@string/intro2_string_gujarati"
                android:id="@+id/textview_info_2"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
